@model IEnumerable<ListeningQuizViewModel>
@{
    ViewData["Title"] = "GrammarDeleteQuiz";
}
<main class="container p-5">
    <div class="row">
        <div class="light-blue-color col-xl-8 col-sm-10 offset-sm-1 offset-xl-2" style="margin-top: 50px; border-radius:50px;">
            <div class="row">
                <div class="col-12 text-center mt-3 font-size-biggish">
                    Quizes available on @Model.FirstOrDefault().Level level:
                </div>
            </div>
            <div class="row mt-3">

                @foreach (var item in Model)
                {
                    <div class="col-9 offset-1 mt-3">
                        <p class="font-size-medium">@item.Name</p>
                    </div>
                    <div class="col-1">
                        <form method="post">
                            <button asp-route-id="@item.Id" class="btn btn-danger" type="submit">
                                <i class="bi bi-x"></i>
                            </button>
                        </form>
                    </div>
                }
            </div>
        </div>
    </div>
</main>
