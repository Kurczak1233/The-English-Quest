@model IEnumerable<GrammarTasksViewModel>
@{
    ViewData["Title"] = "DeleteTask";
}

<main class="container p-5">
    <div class="row">
        <div class="light-blue-color col-xl-8 col-sm-10 offset-sm-1 offset-xl-2" style="margin-top: 50px; border-radius:50px;">
            <div class="row">
                <div class="col-12 text-center mt-3 font-size-biggish">
                    Tasks on this quiz:
                </div>
            </div>
            <div class="row mt-3">

                @foreach (var item in Model)
                {
                    <div class="col-9 offset-1 mt-3">
                        <p><span id="FirstQuestionPart">@item.QuestionFirstPart</span>&nbsp;<span id="DecorationPart" class="dark-blue-text-color font-weight-bold font-italic">@item.QuestionDecoratedPart</span>&nbsp;<span id="SecondQuestionPart">@item.QuestionSecondPart</span></p>
                    </div>
                    <div class="col-1">
                        <form method="post">
                            <button asp-route-taskId="@item.Id" class="btn btn-danger" type="submit">
                                <i class="bi bi-x"></i>
                            </button>
                        </form>
                    </div>
                }
            </div>
        </div>
    </div>
</main>

