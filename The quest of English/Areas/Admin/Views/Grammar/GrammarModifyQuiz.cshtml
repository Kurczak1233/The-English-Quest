@model IEnumerable<GrammarQuizViewModel>
@{
    ViewData["Title"] = "GrammarModifyQuiz";
}

<main class="container p-5">
    <div class="row">
        <div class="light-blue-color col-xl-8 col-sm-10 offset-sm-1 offset-xl-2" style="margin-top: 50px; border-radius:50px;">
            <div class="row">
                <div class="col-12">
                    Quizes available on @Model.FirstOrDefault().Level level:
                </div>
            </div>
            <div class="row">

                @foreach (var item in Model)
                {
                    <div class="col-6 offset-1">
                        <p>@item.Name</p>
                    </div>
                    <div class="col-3">
                        <button class="btn btn-info" type="button">
                            <i class="bi bi-gear"></i>
                        </button>
                    </div>
                }
            </div>
            =
        </div>
    </div>
</main>

