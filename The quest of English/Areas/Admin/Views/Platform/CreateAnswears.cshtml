@model AnswearAndQuestionsViewModel
@{
    Layout = "_AdminAddObjectModel";
}

<main class="container">
    <div class="row">
        <div class="light-blue-color col-xl-8 col-sm-10 offset-sm-1 offset-xl-2" style="margin-top: 100px; border-radius:50px;">
            <form id="form" method="post">
                <div class="p-2 text-center mt-4 font-size-medium col-12">
                    Add answears
                </div>
                <hr>
                <div class="row">
                    <div class="col-3 offset-1 d-flex align-items-center mt-1 mb-3">
                        <label for="QuestionPart1">First answear</label>
                    </div>
                    <div class="col-7">
                        <input id="inputFirstAnswear" asp-for="@Model.Answear.FirstAnswear" type="text" id="QuestionPart1" class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-3 offset-1 d-flex align-items-center mt-1 mb-3">
                        <label for="QuestionPart2">Second answear</label>
                    </div>
                    <div class="col-7">
                        <input id="inputSecondAnswear" asp-for="@Model.Answear.SecondAnswear" type="text" id="QuestionPart2" class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-3 offset-1 d-flex align-items-center mt-1 mb-3">
                        <label for="QuestionPart3">Third answear</label>
                    </div>
                    <div class="col-7">
                        <input id="inputThirdAnswear" asp-for="@Model.Answear.ThirdAnswear" type="text" id="QuestionPart3" class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-3 offset-1 d-flex align-items-center mt-1 mb-3">
                        <label for="QuestionPart3">Fourth answear</label>
                    </div>
                    <div class="col-7">
                        <input id="inputFourthAnswear" asp-for="@Model.Answear.FourthAnswear" type="text" id="QuestionPart3" class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-3 offset-1 d-flex align-items-center mt-1 mb-3">
                        <label for="QuestionPart3">Correct answear</label>
                    </div>
                    <div class="col-7">
                        <input id="inputCorrectAnswear" asp-for="@Model.Answear.CorrectAnswear" type="text" id="QuestionPart3" class="form-control" />
                    </div>
                </div>
                <hr />
                <div class="row mt-5 mb-5">
                    <div class="col-12 text-center font-size-rather-small">
                        Preview
                    </div>
                </div>
                <div class="row mt-3 d-flex justify-content-center">
                    <div class="question-circle text-center ml-4">
                        <strong class="font-size-medium question">1</strong>
                    </div>
                    <div class="col-10 ml-2 mt-2 font-size-rather-small">
                        <p><span>@Model.Question.QuestionFirstPart</span>&nbsp;<span class="dark-blue-text-color font-weight-bold font-italic">@Model.Question.QuestionDecoratedPart</span>&nbsp;<span>@Model.Question.QuestionSecondPart</span></p>
                    </div>
                    <div class="form-check col-10 mr-3" id="checkAnswears">
                        <div class="mt-1 form-check offset-1 answearRadio">
                            <input class="form-check-input" type="radio" name="test" id="1">
                            <label class="form-check-label" for="1">
                                <p id="firstAnswear"></p>
                            </label>
                        </div>
                        <div class="mt-1 form-check offset-1 answearRadio">
                            <input class="form-check-input" type="radio" name="test" id="2">
                            <label class="form-check-label" for="2">
                                <p id="secondAnswear"></p>
                            </label>
                        </div>
                        <div class="mt-1 form-check offset-1 answearRadio">
                            <input class="form-check-input" type="radio" name="test" id="3">
                            <label class="form-check-label" for="3">
                                <p id="thirdAnswear"></p>
                            </label>
                        </div>
                        <div class="mt-1 form-check offset-1 answearRadio">
                            <input class="form-check-input" type="radio" name="test" id="3">
                            <label class="form-check-label" for="3">
                                <p id="fourthAnswear"></p>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 text-center">
                        <button type="submit" class="btn warm-orange-color mb-3">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</main>
<script>
    $("#form").on("change", function () {
        $("#firstAnswear").text($("#inputFirstAnswear").val());
        $("#secondAnswear").text($("#inputSecondAnswear").val());
        $("#thirdAnswear").text($("#inputThirdAnswear").val());
        $("#fourthAnswear").text($("#inputFourthAnswear").val());
    })
</script>