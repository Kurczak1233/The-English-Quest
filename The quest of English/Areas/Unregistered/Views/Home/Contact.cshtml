@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - The_quest_of_English</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" asp-append-version="true" />
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.0/font/bootstrap-icons.css" asp-append-version="true">
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.3.1.min.js"></script>

</head>
<body class="mb-0   d-flex align-items-center" style="height:100vh;">
    <section class="mb-4 container">
        <div class="row">
            <div class="col-12">
                <p class="font-size-medium text-center mt-5">Authors:</p>
                <p class="font-size-big text-center">Michał Kupczak</p>
                </div>

            <div class="col-12 text-center">
                <p>My social media:</p>
                <a class="btn btn-outline-dark btn-floating m-1" href="https://www.facebook.com/hahxdxd" role="button">
                    <i class="bi bi-facebook"></i>
                </a>
                <a class="btn btn-outline-dark btn-floating m-1" href="https://www.linkedin.com/in/michał-kupczak" role="button">
                    <i class="bi bi-linkedin"></i>
                </a>
                <a class="btn btn-outline-dark btn-floating m-1" href="https://github.com/Kurczak1233" role="button">
                    <i class="bi bi-github"></i>
                </a>
            </div>
        </div>
        <div class="col-12 text-center mt-5">
            <a asp-controller="Home" asp-action="Index" class="btn btn-dark" type="button">Back to main page</a>
        </div>
    </section>
    <script src="~/lib/jquery/dist/jquery.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>