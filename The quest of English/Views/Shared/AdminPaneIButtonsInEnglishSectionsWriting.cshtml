@model WritingQuizViewModel

<div class="d-flex justify-content-center mb-3" id="adminPanel">
    <a asp-controller="@Model.Section" asp-action="WritingCreateQuiz" class="btn btn-success">Create quiz</a>
    <a asp-controller="@Model.Section" asp-action="WritingModifyQuiz" asp-route-level="@Model.Level" class="btn btn-info ml-5 mr-5">Modify quiz</a>
    <a asp-controller="@Model.Section" asp-action="WritingDeleteQuiz" asp-route-level="@Model.Level" class="btn btn-danger">Delete quiz</a>
</div>
 