@model ListeningQuizViewModel

<div class="d-flex justify-content-center mb-3" id="adminPanel">
    <a asp-controller="@Model.Section" asp-action="ListeningCreateQuiz" class="btn btn-success">Create quiz</a>
    @if(User.IsInRole(SD.AdminUser))
    {
    <a asp-controller="@Model.Section" asp-action="ListeningModifyQuiz" asp-route-level="@Model.Level" class="btn btn-info ml-5 mr-5">Modify quiz</a>
    <a asp-controller="@Model.Section" asp-action="ListeningDeleteQuiz" asp-route-level="@Model.Level" class="btn btn-danger">Delete quiz</a>
    }
</div>
 