    <script>
        tinymce.init({
            selector: '#mytextarea'
        });
    </script>
</head>
<body style="margin-bottom: 92px;">
    @*//Footer height!*@
    <partial name="_PlatformNavigationBar" />
    @RenderBody()
    <div class="fixed-bottom">
        <partial name="_FooterBarSmaller">
    </div>
    <script src="~/lib/jquery/dist/jquery.js" asp-append-version="true"></script>
    <script src="~/lib/Croppie/croppie.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
