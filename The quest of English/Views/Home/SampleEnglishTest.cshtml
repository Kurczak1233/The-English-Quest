<script>

    //Navbar dynamics
    $(document).ready(function () {
        var navbar = $("#navbar");
        navbar.css("background-color", "rgb(66, 239, 245)");
        navbar.css("transition", "all 1s");
    });
    //Interactive menu dynamics
    function AnimateTransition(ObjId, ToogledId) {
        $(ObjId).mouseover(function () {
            $(ToogledId).removeClass("collapse");
            $(ObjId).css("border-left", "5px solid rgb(252, 186, 3)");
            $(ObjId).css("transition", "all 0.3s");
        });
        $(ObjId).mouseleave(function () {
            $(ToogledId).addClass("collapse");
            $(ObjId).css("border-left", "5px solid rgb(30, 32, 166)");
            $(ObjId).css("transition", "all 0.3s");
        });
    }
    AnimateTransition('#SpecialBorderG', '#grammar');
    AnimateTransition('#SpecialBorderR', '#reading');
    AnimateTransition('#SpecialBorderW', '#writing');
    //Navbar slides down
    var navListOffset = $('#grammarSection').offset().top - $('#main').offset().top - 66;
    console.log(navListOffset);
    $('#NavigationList').css("margin-top", navListOffset)
    $(document).scroll(function () {
        var topOffset = $('#NavigationList').offset().top;
        var windowTopOffset = $(window).scrollTop();
        var result = topOffset - windowTopOffset;
        console.log(result);
        if (windowTopOffset > 260) { // różnica?
            $('#NavigationList').css("margin-top", windowTopOffset - 80);
        }
        else {
            $('#NavigationList').css("margin-top", navListOffset)
        }
    });
</script>


