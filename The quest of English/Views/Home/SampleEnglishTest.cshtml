@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - The_quest_of_English</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" asp-append-version="true" />
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.0/font/bootstrap-icons.css" asp-append-version="true">
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.3.1.min.js"></script>

</head>
<body>
    <partial name="NavigationBar" />

    <main>
        <section class="container">
            <div class="row">
                <div class="col-md-8">
                    <div data-bs-spy="scroll" data-bs-target="#aside" data-bs-offset="0" class="scrollspy-example" tabindex="0">
                        <h4 id="grammar1">Item 1</h4>
                        <h4 id="reading1">Item 2</h4>
                        <p>...</p>
                        <h4 id="writing1">Item 3</h4>
                        <p>...</p>
                    </div>
                </div>
                <aside id="aside" class="col-4 d-none d-md-block mt-5 position-sticky">
                    <div id="NavigationListG" class="list-group">
                        <div class="indent-blue"></div>
                        <span class="font-size-rather-small">Test sections:</span>
                        <div id="SpecialBorderG" class="border-left-style mb-3">
                            <a id="GrammarNavCollapse" class="list-group-item list-group-item-action border-0 font-size-medium" role="button" aria-expanded="false" aria-controls="grammar" href="#grammar">
                                Grammar
                            </a>
                            <div class="collapse text-right font-size-rather-small" id="grammar">
                                <div class="col-12 card card-body border-0 text-left">
                                    <p class="">Grammar coś tam</p>
                                </div>
                            </div>
                        </div>
                        <div id="SpecialBorderR" class="border-left-style mb-3">
                            <a id="ReadingNavCollapse" class="list-group-item list-group-item-action border-0 font-size-medium" role="button" aria-expanded="false" aria-controls="reading" href="#reading">
                                Reading
                            </a>
                            <div class="collapse text-right font-size-rather-small" id="reading">
                                <div class="col-12 card card-body border-0 text-left">
                                    <p>Grammsarsarsar coś tam</p>
                                </div>
                            </div>
                        </div>
                        <div id="SpecialBorderW" class="border-left-style mb-3">
                            <a id="WritingNavCollapse" class="list-group-item list-group-item-action border-0 font-size-medium" role="button" aria-expanded="false" aria-controls="writing" href="#writing">
                                Writing
                            </a>
                            <div class="collapse text-right font-size-rather-small" id="writing">
                                <div class="col-12 card card-body border-0 text-left">
                                    <p>wrt coś tam</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </aside>
            </div>
        </section>
    </main>

    <partial name="FooterBar" />
    <script src="~/lib/jquery/dist/jquery.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
<script>
    $(document).ready(function () {
        var navbar = $("#navbar");
        navbar.css("background-color", "rgb(66, 239, 245)");
        navbar.css("transition", "all 1s");
    });
    function AnimateTransition(ObjId, ToogledId) {
        $(ObjId).mouseover(function () {
            $(ToogledId).removeClass("collapse");
            $(ObjId).css("border-left", "5px solid rgb(252, 186, 3)");
            $(ObjId).css("transition", "all 0.3s");
        });
        $(ObjId).mouseleave(function () {
            $(ToogledId).addClass("collapse");
            $(ObjId).css("border-left", "5px solid rgb(30, 32, 166)");
            $(ObjId).css("transition", "all 0.3s");
        });
    }
    AnimateTransition('#SpecialBorderG', '#grammar');
    AnimateTransition('#SpecialBorderR', '#reading');
    AnimateTransition('#SpecialBorderW', '#writing');
</script>


